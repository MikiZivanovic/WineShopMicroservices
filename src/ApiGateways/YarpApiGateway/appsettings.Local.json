{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "catalog-route": {
                "ClusterId": "catalog-cluster",
                "Match": {
                    "Path": "/catalog-microservice/{**deep}"
                },
                "Transforms": [
                    { "PathPattern": "{**deep}" }
                ]
            },
            "cart-route": {
                "ClusterId": "cart-cluster",
                "Match": {
                    "Path": "/cart-microservice/{**deep}"
                },
                "Transforms": [
                    { "PathPattern": "{**deep}" }
                ]
            },
            "order-route": {
                "ClusterId": "order-cluster",
                "RateLimiterPolicy": "customPolicy",
                "Match": {
                    "Path": "/order-microservice/{**deep}"
                },
                "Transforms": [
                    { "PathPattern": "{**deep}" }
                ]
            }
        },
        "Clusters": {
            "catalog-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:6000/"
                    }
                }
            },
            "cart-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:6001/"
                    }
                }
            },
            "order-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:6003/"
                    }
                }
            }
        }
    }
}
